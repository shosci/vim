" Double quote leading a comment line

" File type checking, plugin, indent on
filetype plugin indent on

" Smart tab
set shiftwidth=4
set tabstop=4
set smarttab

set number " Show line number

" file name, space separator, file type, file status(modified or readonly),
" center placeholder, column, line/total lines, line percentage, padding space
set statusline=%f\ %y%(%m%r%)%=%c,%l\/%L\ %p%%\ 

" Always display status line
set laststatus=2
